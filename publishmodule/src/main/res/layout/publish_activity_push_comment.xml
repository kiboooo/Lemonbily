<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/push_back_btn"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/base_back_btn"
        android:padding="3dp"
        android:layout_marginStart="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/push_title_bar_line"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发表动态"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/base_colorPrimary"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/push_back_btn"
        app:layout_constraintBottom_toBottomOf="@id/push_title_bar_line"
        />

    <View
        android:id="@+id/push_title_bar_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/base_colorWeakPoint"
        android:layout_marginTop="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:id="@+id/push_btn"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_marginEnd="10dp"
        android:text="发送"
        android:textColor="@color/base_graybackground"
        android:background="@drawable/base_radius_button3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/push_title_bar_line"
        />

    <EditText
        android:id="@+id/publish_push_content"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="5dp"
        android:background="@null"
        android:padding="10dp"
        android:textSize="16sp"
        android:hint="这一刻的想法..."
        android:gravity="top"
        android:maxLines="6"
        app:layout_constraintTop_toBottomOf="@id/push_title_bar_line"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/base_colorPrimary"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/publish_push_content"
        />
</android.support.constraint.ConstraintLayout>