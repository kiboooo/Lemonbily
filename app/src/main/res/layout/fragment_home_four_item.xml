<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="408dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    >

    <include
        android:id="@+id/four_item_title"
        layout="@layout/title_content_left_icon_bar" />

    <android.support.constraint.Guideline
        android:id="@+id/center_guide_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="223dp"
        />

    <android.support.v7.widget.CardView
        android:id="@+id/onecard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintDimensionRatio="16:9"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/four_item_title"
        app:layout_constraintRight_toLeftOf="@id/twocard"
        >
        <ImageView
            android:id="@+id/four_onecard_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/base_loading_image_background"
            />

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/four_onecard_main_content"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:maxLength="10"
        android:maxLines="1"
        android:ellipsize="end"
        android:textStyle="bold"
        android:textColor="@color/base_colorPrimary"
        app:layout_constraintTop_toBottomOf="@id/onecard"
        app:layout_constraintLeft_toLeftOf="@id/onecard"
        app:layout_constraintRight_toRightOf="@id/onecard"
        />

    <TextView
        android:id="@+id/four_onecard_introduction_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="12sp"
        android:maxLines="2"
        app:layout_constraintTop_toBottomOf="@id/four_onecard_main_content"
        app:layout_constraintLeft_toLeftOf="@id/onecard"
        app:layout_constraintRight_toRightOf="@id/onecard"
        app:layout_constraintBottom_toBottomOf="@id/center_guide_line"
        />

    <android.support.v7.widget.CardView
        android:id="@+id/twocard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp"
        android:layout_marginStart="5dp"
        app:layout_constraintDimensionRatio="16:9"
        app:layout_constraintLeft_toRightOf="@id/onecard"
        app:layout_constraintTop_toTopOf="@id/onecard"
        app:layout_constraintBottom_toBottomOf="@id/onecard"
        app:layout_constraintRight_toRightOf="parent"
        >

        <ImageView
            android:id="@+id/four_twocard_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/base_loading_image_background"
            />

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/four_twocard_main_content"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:maxLength="10"
        android:maxLines="1"
        android:ellipsize="end"
        android:textStyle="bold"
        android:textColor="@color/base_colorPrimary"
        app:layout_constraintTop_toBottomOf="@id/twocard"
        app:layout_constraintLeft_toLeftOf="@id/twocard"
        app:layout_constraintRight_toRightOf="@id/twocard"
        />

    <TextView
        android:id="@+id/four_twocard_introduction_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="12sp"
        android:maxLines="2"
        app:layout_constraintTop_toBottomOf="@id/four_twocard_main_content"
        app:layout_constraintLeft_toLeftOf="@id/twocard"
        app:layout_constraintRight_toRightOf="@id/twocard"
        app:layout_constraintBottom_toBottomOf="@id/center_guide_line"
        />

    <android.support.v7.widget.CardView
        android:id="@+id/threecard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintDimensionRatio="16:9"
        app:layout_constraintTop_toTopOf="@id/center_guide_line"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/fourcard"
        >

        <ImageView
            android:id="@+id/four_threecard_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/base_loading_image_background"
            />

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/four_threecard_main_content"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:maxLength="10"
        android:maxLines="1"
        android:ellipsize="end"
        android:textStyle="bold"
        android:textColor="@color/base_colorPrimary"
        app:layout_constraintTop_toBottomOf="@id/threecard"
        app:layout_constraintLeft_toLeftOf="@id/threecard"
        app:layout_constraintRight_toRightOf="@id/threecard"
        />

    <TextView
        android:id="@+id/four_threecard_introduction_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="12sp"
        android:maxLines="2"
        app:layout_constraintTop_toBottomOf="@id/four_threecard_main_content"
        app:layout_constraintLeft_toLeftOf="@id/threecard"
        app:layout_constraintRight_toRightOf="@id/threecard"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <android.support.v7.widget.CardView
        android:id="@+id/fourcard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp"
        android:layout_marginStart="5dp"
        app:layout_constraintDimensionRatio="16:9"
        app:layout_constraintTop_toTopOf="@id/threecard"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/threecard"
        app:layout_constraintBottom_toBottomOf="@id/threecard"
        >

        <ImageView
            android:id="@+id/four_fourcard_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/base_loading_image_background"
            />

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/four_fourcard_main_content"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:maxLength="10"
        android:maxLines="1"
        android:ellipsize="end"
        android:textStyle="bold"
        android:textColor="@color/base_colorPrimary"
        app:layout_constraintTop_toBottomOf="@id/fourcard"
        app:layout_constraintLeft_toLeftOf="@id/fourcard"
        app:layout_constraintRight_toRightOf="@id/fourcard"
        />

    <TextView
        android:id="@+id/four_fourcard_introduction_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="12sp"
        android:maxLines="2"
        app:layout_constraintTop_toBottomOf="@id/four_fourcard_main_content"
        app:layout_constraintLeft_toLeftOf="@id/fourcard"
        app:layout_constraintRight_toRightOf="@id/fourcard"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/base_colorWeakPoint"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</android.support.constraint.ConstraintLayout>