<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.Guideline
        android:id="@+id/center_guide_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5"
        />

    <android.support.v7.widget.CardView
        android:id="@+id/oneCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:cardBackgroundColor="#FFC107"
        android:layout_margin="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/twoCard"
        app:layout_constraintBottom_toBottomOf="@id/center_guide_line"
        >

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/twoCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        android:layout_margin="10dp"
        app:cardBackgroundColor="#FFEB3B"
        app:layout_constraintLeft_toRightOf="@id/oneCard"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/center_guide_line"
        app:layout_constraintRight_toRightOf="parent"
        >

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/threeCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:cardBackgroundColor="#CDDC39"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="@id/center_guide_line"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/fourCard"
        app:layout_constraintBottom_toBottomOf="parent"
        >

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/fourCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:cardBackgroundColor="#FF5722"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="@id/center_guide_line"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/threeCard"
        app:layout_constraintBottom_toBottomOf="parent"
        >

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>