<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp">

    <View
        android:layout_width="0dp"
        android:layout_height="0.3dp"
        android:background="@color/base_graybackground"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <ImageView
        android:id="@+id/attention_item_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/attention_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="顺利毕业"
        android:layout_marginStart="10dp"
        android:textColor="@color/base_colorPrimary"
        app:layout_constraintTop_toTopOf="@id/attention_item_avatar"
        app:layout_constraintLeft_toRightOf="@id/attention_item_avatar"
        app:layout_constraintBottom_toBottomOf="@id/attention_item_avatar"
        />

    <View
        android:layout_width="0dp"
        android:layout_height="0.3dp"
        android:background="@color/base_graybackground"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />


</android.support.constraint.ConstraintLayout>